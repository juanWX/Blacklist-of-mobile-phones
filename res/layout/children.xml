<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/child_numCheck"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="电话" >
    </CheckBox>

    <CheckBox
        android:id="@+id/child_checkmsn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/child_numCheck"
        android:text="短信" >
    </CheckBox>

    <Button
        android:id="@+id/changEnd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/child_checkmsn"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/delete_button"
        android:text="@string/chang_ok"
        android:textSize="12sp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/child_checkmsn"
        android:layout_alignLeft="@+id/changEnd_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/ic_menu_delete" />

</RelativeLayout>